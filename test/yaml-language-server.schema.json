{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema for testing the YAML Language Server",
  "type": "object",
  "additionalProperties": false,
  "required": ["config"],
  "properties": {
    "config": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema"],
      "properties": {
        "schema": {
          "type": "object",
          "additionalProperties": false,
          "required": ["says"],
          "properties": {
            "says": {
              "type": "number"
            }
          }
        },
        "here-comes": {
          "type": "object",
          "additionalProperties": false,
          "required": ["the", "sun"],
          "properties": {
            "the": {
              "type": "string"
            },
            "sun": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
